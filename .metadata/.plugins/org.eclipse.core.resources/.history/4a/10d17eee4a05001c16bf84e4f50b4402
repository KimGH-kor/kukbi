package ch06;

class Account{//계좌 생성(클래스 생성)
	//속성
	String accno;
	String name;
	int balance;
	
	Account(String accno, String name, int balance){
		this.accno = accno;
		this.name = name;
		this.balance = balance;
	}
	
	void deposit(int amount) {
		balance += amount;
	}
	void withdraw(int amount) {
		balance -= amount;
	}
}

public class acount {
	public static void main(String[] args) {
		//객체 생성
		Account acc1 = new Account("1234-1234","김경환",10000);

		Account acc2 = new Account();
		acc2.accno = "4321-4321";
		acc2.name = "양지현";
		acc2.balance = 20000;
		
		acc1.deposit(20000);//입금
		acc2.withdraw(10000);//출금
		
		System.out.println(acc1.balance);
		System.out.println(acc2.balance);
		
		
		
	}

}
