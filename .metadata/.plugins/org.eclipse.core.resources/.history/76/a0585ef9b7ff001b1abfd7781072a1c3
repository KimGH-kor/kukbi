package ch02;

public class 퀴즈 {
	public static void main(String[] args) {
		//1. 정수 x가 짝수인지 홀수인지 판별하시오.
		int x = 312;
		if(x % 2 == 0) {
			System.out.println("짝수입니다.");
		}else {
			System.out.println("홀수입니다.");
		}
		//2. 정수 x가 음수인지 양수인지 0인지 판별하시오.
		if(x > 0) {
			System.out.println("양수 입니다.");
		}else {
			System.out.println("음수 입니다.");
		}
	
}
}
